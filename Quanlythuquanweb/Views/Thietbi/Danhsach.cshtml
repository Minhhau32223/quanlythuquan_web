@{
    Layout = null;
}

@model List<Quanlythuquanweb.Models.Thietbi>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tranchu</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100%;
        }
        .wrapper {
            min-height: 100vh; /* Chiều cao tối thiểu = 100% màn hình */
            display: flex;
            flex-direction: column;
            background-color: rgb(206, 152, 100, 0.85);
            
        }
        /* Header */
        header.top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 30px;
            background-color: rgba(164, 104, 46, 0.85);
            color: white;
            font-weight: bold;
            font-size: 18px;
            position: relative;
            z-index: 10;
        }

        header .logo {
            font-family: Georgia, serif;
            font-size: 24px;
            opacity: 0.7;
        }

        header nav a {
            color: white;
            text-decoration: none;
            margin-left: 25px;
            font-weight: 500;
        }

            header nav a:hover {
                text-decoration: underline;
            }

        header .icons {
            display: flex;
            align-items: center;
            gap: 15px;
        }

            header .icons .bell {
                width: 22px;
                height: 22px;
                cursor: pointer;
                filter: brightness(0) invert(1);
            }

            header .icons .profile-circle {
                width: 30px;
                height: 30px;
                border-radius: 50%;
                background-color: #cbb994;
                cursor: pointer;
            }

        /* Footer */
        footer {
            background-color: #2d1700;
            color: #e3ddd0;
            padding: 25px 60px;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            font-size: 14px;
            position:relative;
            z-index:10;
            bottom:0;
            width:100%;
        }

            footer .footer-container {
                display: flex;
                justify-content: space-between;
                flex-wrap: wrap;
            }

            footer section {
                max-width: 300px;
                margin-bottom: 20px;
                line-height: 1.5;
            }

                footer section h4 {
                    margin-bottom: 10px;
                    font-weight: 700;
                }

                footer section a {
                    color: #cbb994;
                    text-decoration: none;
                    display: block;
                    margin-bottom: 6px;
                    font-style: italic;
                }

                    footer section a:hover {
                        text-decoration: underline;
                    }

            footer .address-info {
                font-style: italic;
            }
        .table-container {
            max-height: 520px; /* khoảng ~7 dòng với padding lớn */
            overflow-y: auto;
/*            border: 1px solid #ccc;*/
            margin-top: 10px;
            padding: 12px 14px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 14px 18px;
            text-align: center;
            vertical-align: middle;
            min-width: 120px;
        }

        thead {
            background-color: #f2f2f2;
            font-weight: bold;
            position: sticky;
            top: 0;
            z-index: 1;
        }

        .btn-primary {
            background-color: #2d1700;
            color: #e3ddd0;
            padding: 12px 14px;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            font-size: 16px;
            text-decoration: none;
            border: none;
            border-radius: 5px;
        }

            .btn-primary:hover {
                background-color: peru;
                cursor: pointer;
            }
        .carousel-container {
            max-width: 800px;
            height: 400px;
            position: relative;
            overflow: hidden;
            margin: 30px auto;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.2);
        }

        .carousel {
            position: relative;
            width: 100%;
            height: 400px; /* hoặc auto theo ảnh, hoặc % theo container cha */
            overflow: hidden;
        }

        .carousel-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: none;
        }

        .carousel-image.active {
           display: block;
           position: absolute;
           top: 0;
           left: 0;
        
         }

        .carousel-buttons {
            position: absolute;
            top: 50%;
            width: 100%;
            display: flex;
            justify-content: space-between;
            transform: translateY(-50%);
            z-index: 5;
        }

            .carousel-buttons button {
                background-color: rgba(0, 0, 0, 0.4);
                color: white;
                border: none;
                padding: 12px 18px;
                font-size: 24px;
                cursor: pointer;
                border-radius: 50%;
                transition: background-color 0.3s ease;
            }

                .carousel-buttons button:hover {
                    background-color: rgba(0, 0, 0, 0.7);
                }
           main{
               max-width:80%;
               border:2px solid black ;
               align-items:center;
               margin-left:10%;
               flex:1;
               background-color: white;
           }
    </style>
</head>
<body>
    <div class="wrapper">
        <header class="top-bar">
            <div class="logo">THUQUAN.COM</div>
            <nav>
                <a href="@Url.Action("Danhsach", "Thietbi")">Trang chủ</a>
                <a href="#">Thủ tục</a>
                <a href="#">Liên hệ</a>
                <a href="@Url.Action("UserProfile", "Home")">Cá nhân</a>
            </nav>
            <div class="icons">
                <svg class="bell" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white"><path d="M12 24c1.104 0 1.99-.896 1.99-2h-3.98c0 1.104.886 2 1.99 2zm6.364-6v-5c0-3.079-1.639-5.641-4.364-6.32v-.68c0-.826-.675-1.5-1.5-1.5s-1.5.674-1.5 1.5v.68c-2.725.679-4.364 3.241-4.364 6.32v5l-1.636 1.636v.364h15v-.364l-1.636-1.636z" /></svg>
                <div class="profile-circle"></div>
            </div>
        </header>

        <div class="carousel-container" style="text-align: center; margin: 30px auto; ">
            <div class="carousel">
                <img class="carousel-image" src="images/banner1.png" alt="Banner 1">
                <img class="carousel-image" src="images/banner1.png" alt="Banner 2">
                <img class="carousel-image" src="images/banner1.png" alt="Banner 3">
                <img class="carousel-image" src="images/banner1.png" alt="Banner 4">
            </div>
            <div class="carousel-buttons">
                <button onclick="prevSlide()">❮</button>
                <button onclick="nextSlide()">❯</button>
            </div>
        </div>

        <!-- MAIN -->
        <main>
            <h2 style="font-size: 32px; margin-left: 24px; color: #2d1700">Danh sách thiết bị</h2>
            <hr />

            @if (Model.Count == 0)
            {
                <p>Không có thiết bị nào trong hệ thống.</p>
            }
            else
            { <div style="text-align:center; margin: 20px 0;">
                    <input type="text" id="searchInput" placeholder="Tìm kiếm theo tên thiết bị..." style="width: 300px; padding: 10px; border-radius: 6px; border: 1px solid #ccc;">
                </div>
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Mã thiết bị</th>
                                <th>Tên thiết bị</th>
                                <th>Giá thuê (VNĐ)</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tb in Model)
                            {
                                <tr>
                                    <td>@tb.Mathietbi</td>
                                    <td>@tb.Tenthietbi</td>
                                    <td>@tb.Giathue</td>
                                    <td>
                                        @if (tb.Trangthai.ToLower() == "đang trống")
                                        {
                                            <span style="color: green; font-weight: bold;">@tb.Trangthai</span>
                                        }
                                        else
                                        {
                                            <span style="color: red; font-weight: bold;">@tb.Trangthai</span>
                                        }
                                    </td>
                                    <td>
                                        @if (tb.Trangthai.ToLower().Trim() == "trống")
                                        {
                                            <a href="@Url.Action("DatCho", "Thietbi", new { mathietbi = tb.Mathietbi })" class="btn btn-primary">Đặt chỗ</a>
                                        }
                                        else
                                        {
                                            <span style="color: gray;">Không khả dụng</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </main>
    </div>
    <footer>


        <div class="footer-container">
            <section class="address-info" aria-label="Thông tin địa chỉ">
                <h4>THUQUAN.COM</h4>
                <p>Không gian đọc sách & sáng tạo</p>
                <p><i>Địa chỉ:</i> 123 CMT8, Q3, TP HCM.</p>
                <p><i>Giờ hoạt động:</i> 8:00 AM - 22:00 PM, Thứ Hai đến Chủ Nhật</p>
            </section>


            <section aria-label="Liên hệ và hỗ trợ">
                <h4>Liên hệ & hỗ trợ</h4>
                <p>Hotline: 0909-150-909</p>
                <p>E-mail: contact@thuquan.vn</p>
                <p>Hướng dẫn đặt bàn</p>
                <p>Chính sách thuê thiết bị</p>
                <p>Quy định thu quán</p>
            </section>

            <section aria-label="Mạng xã hội & cộng đồng">
                <h4>Mạng xã hội & cộng đồng</h4>
                <a href="#" target="_blank" rel="noopener">Facebook</a>
                <a href="#" target="_blank" rel="noopener">Instagram</a>
                <a href="#" target="_blank" rel="noopener">Tiktok</a>
            </section>

            <section aria-label="Chính sách & điều khoản">
                <h4>Chính sách & điều khoản</h4>
                <p>Chính sách đặt chỗ</p>
                <p>Chính sách hoàn tiền</p>
                <p>Điều khoản sử dụng dịch vụ</p>
                <p>Chính sách bảo mật</p>
            </section>
        </div>
    </footer>
    <div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let currentSlide = 0;
            const slides = document.querySelectorAll(".carousel-image");

            function showSlide(index) {
                slides.forEach((slide, i) => {
                    slide.classList.remove("active");
                    if (i === index) {
                        slide.classList.add("active");
                    }
                });
            }

            function nextSlide() {
                currentSlide = (currentSlide + 1) % slides.length;
                showSlide(currentSlide);
            }

            function prevSlide() {
                currentSlide = (currentSlide - 1 + slides.length) % slides.length;
                showSlide(currentSlide);
            }

            showSlide(currentSlide);

            // Optional: Tự động chuyển ảnh
            setInterval(nextSlide, 5000);
        });
        //tìm thietbi
        document.getElementById("searchInput").addEventListener("keyup", function () {
            let filter = this.value.toLowerCase();
            let rows = document.querySelectorAll("tbody tr");

            rows.forEach(row => {
                const deviceName = row.cells[1].textContent.toLowerCase();
                if (deviceName.includes(filter)) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        });
    </script>
</body>
</html>
