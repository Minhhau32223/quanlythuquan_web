
@{
    ViewBag.Title = "SignUp";
    Layout = null;

}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng ký</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-size: 18pt;
            background-color: #A7713A;
            display: flex;
            justify-content: center;
            align-items: center;
            align-content: center;
        }

        .login-form {
            background-color: white;
            padding: 30px;
            margin: 10%;
            border-radius: 10px;
            width: 50%;
        }

        .btn-custom {
            background-color: #A7713A;
            color: white;
            width: 30%;
            height: fit-content;
            margin: 0 auto;
            display: block;
            font-size: 18pt;
        }

        .register-link a {
            color: #A7713A;
            text-decoration: none;
        }
    </style>

</head>
<body>
    <div class="login-form">
        <h2 class="text-center mb-4">Đăng ký</h2>
        @using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
        {
            <div class="mb-3">
                @Html.Label("Tên đăng nhập:", htmlAttributes: new { @class = "form-label" })
                @Html.TextBox("Taikhoan", null, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.Label("Mật khẩu:", htmlAttributes: new { @class = "form-label" })
                @Html.TextBox("Matkhau", null, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.Label("Họ tên:", htmlAttributes: new { @class = "form-label" })
                @Html.TextBox("Hoten", null, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.Label("Số điện thoại:", htmlAttributes: new { @class = "form-label" })
                @Html.TextBox("Sdt", null, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.Label("Email: ", htmlAttributes: new { @class = "form-label" })
                @Html.TextBox("Email", null, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.Label("Địa chỉ: ", htmlAttributes: new { @class = "form-label" })
                @Html.TextBox("Diachi", null, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-custom">Đăng ký</button>
            <div class="register-link">Bạn đã có tài khoản? <a href="@Url.Action("Login", "Account")">Đăng nhập ngay!</a></div>
        }
    </div>

</body>
</html>


