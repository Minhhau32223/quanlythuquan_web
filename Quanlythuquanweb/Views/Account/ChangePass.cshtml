
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đổi mật khẩu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            font-size: 18pt;
            background-color: #A7713A;
            display: flex;
            justify-content: center;
            align-items: center;
            align-content: center;
        }

        .login-form {
            background-color: white;
            padding: 30px;
            margin: 10%;
            border-radius: 10px;
            width: 50%;
        }

        .btn-custom {
            background-color: #A7713A;
            color: white;
            width: 30%;
            height: fit-content;
            margin: 0 auto;
            display: block;
            font-size: 18pt;
        }

        .register-link a {
            color: #A7713A;
            text-decoration: none;
        }
    </style>

</head>
<body>
    <div class="login-form">
        <h2 class="text-center mb-4">Đổi mật khẩu</h2>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }
       

        @using (Html.BeginForm("ChangePass", "Account", FormMethod.Post))
        {


            

            <div class="mb-3">
                @Html.Label("Mật khẩu mới:", htmlAttributes: new { @class = "form-label" })
                @Html.Password("Matkhaumoi", ViewBag.Matkhaumoi as string, new
                {
               @class = "form-control",
               type = "password",
               required = "required",
               pattern = @".{6,25}",
               title = "Mật khẩu từ 6 đến 25 ký tự!"
           })
            </div>

            <div class="mb-3">
                @Html.Label("Xác nhận mật khẩu mới:", htmlAttributes: new { @class = "form-label" })
                @Html.Password("Xacnhanmatkhaumoi", ViewBag.Xacnhanmatkhaumoi as string, new
                {
               @class = "form-control",
               type = "password",
               required = "required",
               pattern = @".{6,25}",
               title = "Mật khẩu từ 6 đến 25 ký tự!"
           })
            </div>
            <input type="hidden" name="Taikhoan" value="@ViewBag.Taikhoan" />

            <div class="d-flex flex-row">
                <button type="submit" class="btn btn-custom">Đổi mật khẩu</button>

            </div>
            <div class="register-link">Bạn đã có tài khoản? <a href="@Url.Action("Login", "Account")">Đăng nhập ngay!</a></div>
            <div class="register-link">Bạn chưa có tài khoản? <a href="@Url.Action("SignUp", "Account")">Đăng ký ngay!</a></div>
        }
    </div>

</body>
</html>
