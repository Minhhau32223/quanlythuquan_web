
@{
    ViewBag.Title = "Đăng nhập";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8"/>
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-size: 18pt;
            background-color: #A7713A;
            display: flex;
            justify-content: center;
            align-items: center;
            align-content: center;
        }
        .login-form{
            background-color: white;
            padding: 30px;
            margin: 10%;
            border-radius: 10px;
            width: 50%;
            
        }
        .btn-custom {
            background-color: #A7713A;
            color: white;
            width: 30%;
            height: fit-content;
            margin: 0 auto;
            display: block;
            font-size: 18pt;
        }
        .register-link a{
            color: #A7713A;
            text-decoration: none;
        }
    </style>
   
</head>
<body>
    <div class="login-form">
        <h2 class="text-center mb-4">Đăng nhập</h2>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="mb-3">
                @Html.Label("Tên đăng nhập:", htmlAttributes: new { @class = "form-label" })
                @Html.TextBox("Taikhoan", null, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                @Html.Label("Mật khẩu:", htmlAttributes: new { @class = "form-label" })
                @Html.TextBox("Matkhau", null, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-custom">Đăng nhập</button>
            <div class="register-link">Bạn chưa có tài khoản? <a href="@Url.Action("SignUp", "Account")">Đăng ký ngay!</a></div>
        }
    </div>
    
</body>
</html>